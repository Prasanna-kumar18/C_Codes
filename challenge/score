#include<stdio.h>

int main()
    {
        int score[]= {45,80,95,87,30}, a=0;     //Declaring all 5 candidates score in an array named Score

        for(int i=1; i<=5; i++)      //Iterating the for loop to check individual Candiate score
            {
                
                if(score[i]>90)     //Check if the candidate scored more than 90
                    {
                        a=i;
                        printf("\n\nThe candidate number %d has score more than 90 \n", ++a);   //Whenever this condition loop execute it will print the pre incremented value of i.
                    }
            }
        if(a==0)
            {
                printf("No candidates have score more than 90\n");
            }
    }